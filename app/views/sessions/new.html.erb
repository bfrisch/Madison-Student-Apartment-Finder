<section id="User_View" class="unselectable">
	<h1 class="page_header">Sign in</h1>
	<hr id="generic_header_ruler"/>
	<%= form_for(:session, :url => sessions_path) do |f| %>
		<div class="field">
	    	<%= f.label :Email %><br />
	    	<%= f.text_field :Email %>
	  	</div>
	  	<div class="field">
	    	<%= f.label :password %><br />
	    	<%= f.password_field :password %>
	  	</div>
	  	<p><%= link_to "Forgot password?", new_password_reset_path, :class => "generic_link" %></p>
	  	<div class="field">
	  		<% params[:remember_me] = false %>
  			<%= check_box_tag :remember_me, 1, params[:remember_me] %>
 			<%= label_tag :remember_me %>
		</div>
		<br />
	  	<div class="actions">
	    	<%= f.submit "Sign in" %>
	  	</div>
	<% end %>
	
	<p>New user? <%= link_to 'Sign up now!', signup_path, :class => "generic_link" %></p>
</section>
