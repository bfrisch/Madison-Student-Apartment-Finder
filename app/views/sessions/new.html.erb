<section id="User_View" class="unselectable">
	<h1 id="User_Title">Sign in</h1>
	<hr id="User_View_Bar"/>
	<%= form_for(:session, :url => sessions_path) do |f| %>
	  <div class="field">
	    <%= f.label :Email %><br />
	    <%= f.text_field :Email %>
	  </div>
	  <div class="field">
	    <%= f.label :password %><br />
	    <%= f.password_field :password %>
	  </div>
	  <div class="actions">
	    <%= f.submit "Sign in" %>
	  </div>
	  <div class="field">
	  			<% params[:remember_me] = true %>
  				<%= check_box_tag :remember_me, 1, params[:remember_me] %>
 				<%= label_tag :remember_me %>
			</div>
	<% end %>
	
	<p>New user?  <a><%= link_to "Sign up now!", signup_path %></a></p>
</section>
