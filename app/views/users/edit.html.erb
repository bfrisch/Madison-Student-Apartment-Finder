<section id="User_View" class="unselectable" >
	<h1>Edit user</h1>

	<%= form_for(@user) do |f| %>
  	<%= render 'shared/error_messages', :object => f.object %>
  	<div class="field">
  		<%= f.label :Name %><br />
    	<%= f.text_field :Name %>
  	</div>
  	<div class="field">
    	<%= f.label :Email %><br />
    	<%= f.text_field :Email %>
  	</div>
  	<div class="field">
    	<%= f.label :password %><br />
    	<%= f.password_field :password %>
  	</div>
  	<div class="field">
   	  	<%= f.label :password_confirmation, "Confirmation" %><br />
		<%= f.password_field :password_confirmation %>
  	</div>
  	
  	<div class="actions">
    	<%= f.submit "Update" %>
  	</div>
<% end %>